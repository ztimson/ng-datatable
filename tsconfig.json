{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "../out-tsc/app",
        "module": "es2015",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "paths": {
            "ng-datatable": [
                "dist/ng-datatable"
            ],
            "ng-datatable/*": [
                "dist/ng-datatable/*"
            ]
        }
    }
}
